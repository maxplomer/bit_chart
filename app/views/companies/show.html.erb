<h1><%= @company.name %></h1>

<h1><%= @company.symbol %></h1>

<% quote = @company.quotes.last %>
<% flag = (quote.change > 0 ? "+" : "-") %>
<% flag = "" if quote.change == 0 %>

<table>

  <tr>
   <td>Price</td>
   <td>&nbsp; &#36; <%= quote.price %></td>
  <tr>

  <tr>
   <td>Change</td>
   <td>&nbsp; <%= flag %> &#36;<%= quote.change.abs %></td>
  <tr>

  <tr>
   <td>&#37; Change</td>
   <td>&nbsp; <%= flag %> <%= quote.percent_change.abs %>&#37;</td>
  <tr>

</table>

<br>

<h3>Chart</h3>

<% data = @company.price_graph_data_hash %>
<% diff = (data.values.max - data.values.min) / 10.0 %>
<%= line_chart(data, min: data.values.min - diff, max: data.values.max + diff, height: "400px") %>

 

